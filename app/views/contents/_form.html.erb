<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
  .formartikel {
    width: 100%;
  }
  #judul {
    width: 100%;
  }
</style>
<%= form_with(model: content, local: true) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
        <% content.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.file_field :banner, placeholder: 'Banner Artikel', class: 'formartikel', require: true %>
  </div>
  <br>
  <div class="field">
    <%= form.text_field :judul, placeholder: 'Judul', class: 'formartikel', require: true, id: 'judul' %>
  </div>
  <div class="row" hidden="">
      <div class="col-25">
        <%= form.label :user_id %>
      </div>
      <div class="col-75">
        <%= form.text_field :user_id, :value => current_user.id %>
      </div>
    </div>
  <br>
  <div class="field">
    <%= form.rich_text_area :isi,placeholder: 'Isi Artikel Anda', require: true %>
  </div>

  <center>
    <div class="actions">
      <%= form.submit %>
    </div>
  </center>
<% end %>

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>School Tech</title>
    <link href="css/media_query.css" rel="stylesheet" type="text/css"/>
    <link href="css/bootstrap.css" rel="stylesheet" type="text/css"/>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="css/animate.css" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="css/owl.carousel.css" rel="stylesheet" type="text/css"/>
    <link href="css/owl.theme.default.css" rel="stylesheet" type="text/css"/>
    <!-- Bootstrap CSS -->
    <link href="css/style_1.css" rel="stylesheet" type="text/css"/>
    <!-- Modernizr JS -->
    <script src="js/modernizr-3.5.0.min.js"></script>
</head>
<body>

<div class="container-fluid paddding mb-5">
    <div class="row mx-0">
      <% @banner_besar.each do |banner| %>
        <div class="col-md-6 col-12 paddding animate-box" data-animate-effect="fadeIn">
            <div class="fh5co_suceefh5co_height"><img src="<%= url_for(banner.banner)%> alt="img"/>
                <div class="fh5co_suceefh5co_height_position_absolute"></div>
                <div class="fh5co_suceefh5co_height_position_absolute_font">
                    <div class=""><a href="contents/<%= banner.id %>" class="fh5co_good_font" style="list-style-type: none; text-decoration: none; color: white;" > <%= banner.judul %></a></div>
                </div>
            </div>
        </div>
        <% end %>
        <div class="col-md-6">
            <div class="row">
              <% @contents.each do |content| %>
                <div class="col-md-6 col-6 paddding animate-box" data-animate-effect="fadeIn">
                    <div class="fh5co_suceefh5co_height_2"><img src="<%= url_for(content.banner)%>" alt="img"/>
                        <div class="fh5co_suceefh5co_height_position_absolute"></div>
                        <div class="fh5co_suceefh5co_height_position_absolute_font_2">
                            <div class="">
                              <a href="contents/<%= content.id %>" class="fh5co_good_font_2" style="list-style-type: none; text-decoration: none; color: white;" > <%= content.judul %></a>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div id="artikel" class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">News</div>
                </div>
                <% @contents.each do |content| %>
                <div class="row pb-4">
                    <div class="col-md-5">
                        <div class="fh5co_hover_news_img">
                            <div class="fh5co_news_img"><img src="<%= url_for(content.banner)%>" alt=""/></div>
                            <div></div>
                        </div>
                    </div>
                    <div class="col-md-7 animate-box">
                      <br>
                        <a href="/contents/<%= content.id %>" class="fh5co_magna py-2" style="list-style-type: none; text-decoration: none; color: white;" > <%= content.judul %> </a>
                        <!-- <a href="single.html" class="fh5co_mini_time py-3"> Thomson Smith -
                        April 18,2016 </a> -->
                        <div class="fh5co_consectetur"> <%= truncate(strip_tags(content.rich_text_isi.to_s), length: 15) %>
                        </div>
                    </div>
                </div>
                <% end %>
                <center>
                  <%= paginate @listcontents %>
                </center>
            </div>
            <div id="populer" class="col-md-3 animate-box" data-animate-effect="fadeInRight">

                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Most Popular</div>
                </div>
                <% @random_content.each do |random| %>
                <div class="row pb-3">
                    <div class="col-5 align-self-center">
                        <img src="<%= url_for(random.banner)%>" alt="img" class="fh5co_most_trading"/>
                    </div>
                    <div class="col-7 paddding">
                        <a  href="contents/<%= random.id %>" class="most_fh5co_treding_font" style = "list-style-type: none;text-decoration: none; color: black;" > <%= random.judul %> </a>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>



</body>
</html>